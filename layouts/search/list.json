{{- $.Scratch.Set "content" slice -}}
{{- range .Site.Pages -}}
  {{- if not (hasPrefix .RelPermalink "/search/") -}}
    {{- $tags := .Params.tags | default slice -}}
    {{- $summary := .Params.summary | default "" -}}
    {{- $plain := .Plain | default "" -}}
    {{- $.Scratch.Add "content" (dict 
        "title" .Title 
        "summary" $summary 
        "content" $plain 
        "permalink" .Permalink 
        "tags" $tags
    ) -}}
  {{- end -}}
{{- end -}}
{{- $.Scratch.Get "content" | jsonify -}}
